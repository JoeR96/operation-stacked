{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@operation-stacked/api-hooks": ["libs/api-hooks/src/index.ts"],
      "@operation-stacked/shared-images": ["libs/shared-images/src/index.ts"],
      "@operation-stacked/shared-openapis": [
        "libs/shared-openapis/src/index.ts"
      ],
      "@operation-stacked/shared-services": [
        "libs/shared-services/src/index.ts"
      ],
      "@operation-stacked/shared-styles": ["libs/shared-styles/src/index.ts"],
      "@operation-stacked/ui-components": ["libs/ui-components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
